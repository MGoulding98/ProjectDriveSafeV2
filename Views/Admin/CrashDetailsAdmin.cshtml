@{
    ViewData["Title"] = "DriveSafe Details";
    Layout = "_AdminLayout";
}

@model Crash

<h2 class="text-center">Crash Details</h2>
<br />

<div class="row">
    <div class="col-sm-4">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <h4 class="font-weight-bold text-center" style="font-size:large">Crash Information:</h4>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Crash ID:</h6>
                        <div>@Model.CRASH_ID</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Crash Date and Time:</h6>
                        <div>@Model.CRASH_DATETIME</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Route:</h6>
                        <div>@Model.ROUTE</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Milepoint:</h6>
                        <div>@Model.MILEPOINT</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Latitude:</h6>
                        <div>@Model.LAT_UTM_Y</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Longitude:</h6>
                        <div>@Model.LONG_UTM_X</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Main Road:</h6>
                        <div>@Model.MAIN_ROAD_NAME</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">City:</h6>
                        <div>@Model.CITY</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">County Name:</h6>
                        <div>@Model.COUNTY_NAME</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Severity:</h6>
                        <div>@Model.CRASH_SEVERITY_ID</div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-8">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <h4 class="font-weight-bold text-center" style="font-size:large">Present Variables:</h4>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Work Zone Related:</h6>
                        <div>@Model.WORK_ZONE_RELATED</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Pedestrian Involved:</h6>
                        <div>@Model.PEDESTRIAN_INVOLVED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Bicyclist Involved:</h6>
                        <div>@Model.BICYCLIST_INVOLVED</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Motorcycle Involved:</h6>
                        <div>@Model.MOTORCYCLE_INVOLVED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Improper Restraint:</h6>
                        <div>@Model.IMPROPER_RESTRAINT</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Unrestrained:</h6>
                        <div>@Model.UNRESTRAINED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">DUI:</h6>
                        <div>@Model.DUI</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Intersection Related:</h6>
                        <div>@Model.INTERSECTION_RELATED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Drowsy Driving:</h6>
                        <div>@Model.DROWSY_DRIVING</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Wild Animal Related:</h6>
                        <div>@Model.WILD_ANIMAL_RELATED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Domestic Animal Related:</h6>
                        <div>@Model.DOMESTIC_ANIMAL_RELATED</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Overturn Rollover:</h6>
                        <div>@Model.OVERTURN_ROLLOVER</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Commerical Motor Vehical Involved:</h6>
                        <div>@Model.COMMERCIAL_MOTOR_VEH_INVOLVED</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Teenage Driver Involved:</h6>
                        <div>@Model.TEENAGE_DRIVER_INVOLVED</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Older Driver Involved:</h6>
                        <div>@Model.OLDER_DRIVER_INVOLVED</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Night/Dark Condition:</h6>
                        <div>@Model.NIGHT_DARK_CONDITION</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Single Vehicle:</h6>
                        <div>@Model.SINGLE_VEHICLE</div>
                    </td>
                    <td>
                        <h6 class="font-weight-bold">Distracted Driving:</h6>
                        <div>@Model.DISTRACTED_DRIVING</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h6 class="font-weight-bold">Roadway Departure:</h6>
                        <div>@Model.ROADWAY_DEPARTURE</div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="row justify-content-center" style="margin:auto">
    <div style="padding-right:50px">
        <a asp-controller="Admin" asp-action="AdminView" class="btn btn-secondary">Cancel</a>
    </div>
    <div>
        <a class="btn btn-info" asp-controller="Admin" asp-action="EditCrash" asp-route-crashid="@Model.CRASH_ID"> Edit </a>
    </div>
</div>