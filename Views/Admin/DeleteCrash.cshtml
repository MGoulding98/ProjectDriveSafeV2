@{
    ViewData["Title"] = "Delete Crash";
}

@model Crash

<h2>Confirm Deletion:</h2>

<h3>Are you sure you want to delete record number @Model.CRASH_ID?</h3>

<form method="post" asp-controller="Admin" asp-action="DeleteCrash">
    <button type="submit">Delete</button>
    <a asp-controller="Admin" asp-action="AdminView" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="CRASH_ID" />
</form>
