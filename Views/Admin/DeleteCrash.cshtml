@{
    ViewData["Title"] = "Delete Crash";
}

@model Crash
<br />
<div class="d-flex justify-content-center">
    <h2>Confirm Deletion:</h2>
</div>
<div class="d-flex justify-content-center">
    <h3>Are you sure you want to delete record number @Model.CRASH_ID?</h3>
</div>
<br />
<form method="post" asp-controller="Admin" asp-action="DeleteCrash">
    <div class="row justify-content-center" style="margin:auto">
        <div style="padding-right:50px">
            <a asp-controller="Admin" asp-action="AdminView" class="btn btn-secondary">Cancel</a>
        </div>
        <div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <input type="hidden" asp-for="CRASH_ID" />
        </div>
    </div>
</form>