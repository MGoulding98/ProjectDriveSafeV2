@{
    ViewData["Title"] = "DriveSafe Data";
    Layout = "_AdminLayout";
}

@model CrashesViewModel


    <div id="types" class="col-3">
        <vc:counties></vc:counties>
    </div>

    <div class="container">

        @*row 1 - Title of Site *@
        <div class=row>

        <dv class="col-lg-12 col-xs-6 border border-width:8px border-dark">
            <h1 style="text-align:center" class="font-weight-bold">DriveSafe Data</h1>
    </div>

        @*row 2 - DateTime / Road / City / Severity *@

    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>       
                    <h4 style="text-align:center" class="font-weight-bold">Date and Time</h4>  
                </th>
                <th>
                    <h4 style="text-align:center" class="font-weight-bold">Road Name</h4>
                </th>
                <th>
                    <h4 style="text-align:center" class="font-weight-bold">City Name</h4>
                </th>
                <th>
                     <h4 style="text-align:center" class="font-weight-bold">Severity</h4>
                </th>
            </tr>
        </thead>

            @*row 3 - Date Info / Location Info / Time Info *@
            @*for each*@

            <tbody>
                @*if statement*@

                @foreach (Crash x in Model.Crashes)
                {
                    <tr>
                        <td>
                            <div class="col">
                                @x.CRASH_DATETIME
                            </div>
                        </td>

                        <td>
                            <div class="col">
                                @x.MAIN_ROAD_NAME
                            </div>
                        </td>
                        <td>
                            <div class="col">
                                @x.CITY
                            </div>
                        </td>
                        <td>
                            <div class="col">
                                @x.CRASH_SEVERITY_ID
                            </div>
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-controller="Admin" asp-action="EditCrash" asp-route-crashid="@x.CRASH_ID"> Edit </a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="DeleteCrash" asp-route-crashid="@x.CRASH_ID">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <div page-blah="@Model.PageInfo" page-action="AdminView" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-classes-enabled="true"
             class="btn-group pull-right m-1"></div>
    </div>

