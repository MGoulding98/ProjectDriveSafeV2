            </div>
            <br />
            <div class="col-md-10">
                <label asp-for="ROADWAY_DEPARTURE"><b>Roadway Departure:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.ROADWAY_DEPARTURE, true)
                False
                @Html.RadioButtonFor(model => model.ROADWAY_DEPARTURE, false)
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="row justify-content-center" style="margin:auto">
        <div style="padding-right:50px">
            <a class="btn btn btn-dark" href="/Admin/AdminView">Back</a>
        </div>
        <div>
            <button class="btn btn btn-info" type="submit">Save</button>
        </div>
    </div>
    <br />
</form>