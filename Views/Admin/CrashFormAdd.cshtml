@{
}

@model Crash


<h2 class="text-center">Enter Information for the Collision:</h2>
<form method="post">

    <div asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-4"></div>
        <div class="text-center text-justify justify-content-center col-4">

            <label asp-for="CRASH_ID" class="form-label"><b>Crash ID:</b></label>
            <input placeholder="Crash ID" class="form-control" type="number" asp-for="CRASH_ID" /><br />

            <label asp-for="CRASH_DATETIME" class="form-label"><b>Crash Date and Time:</b></label>
            <input placeholder="ex: 1/1/2016 23:47" class="form-control" type="text" asp-for="CRASH_DATETIME" /><br />

            <label asp-for="ROUTE" class="form-label"><b>Route:</b></label>
            <input placeholder="ex: 15" class="form-control" type="text" asp-for="ROUTE" /><br />

            <label asp-for="MILEPOINT" class="form-label"><b>Milepoint:</b></label>
            <input placeholder="ex: 5.87" class="form-control" type="text" asp-for="MILEPOINT" /><br />

            <label asp-for="LAT_UTM_Y" class="form-label"><b>Latitude:</b></label>
            <input placeholder="ex: 4,395,233.44" class="form-control" type="text" asp-for="LAT_UTM_Y" /><br />

            <label asp-for="LONG_UTM_X" class="form-label"><b>Longitude:</b></label>
            <input placeholder="ex: 428,649.19" class="form-control" type="text" asp-for="LONG_UTM_X" /><br />

            <label asp-for="MAIN_ROAD_NAME" class="form-label"><b>Main Road Name:</b></label>
            <input placeholder="ex: Yeet Road" class="form-control" type="text" asp-for="MAIN_ROAD_NAME" /><br />

            <label asp-for="CITY" class="form-label"><b>City:</b></label>
            <input placeholder="ex: Provo" class="form-control" type="text" asp-for="CITY" /><br />

            <label asp-for="COUNTY_NAME" class="form-label"><b>County Name:</b></label>
            <input placeholder="ex: Utah" class="form-control" type="text" asp-for="COUNTY_NAME" /><br />

            <label asp-for="CRASH_SEVERITY_ID" class="form-label"><b>Severity:</b></label>
            <select class="form-select form-control" asp-for="CRASH_SEVERITY_ID">
                <option value="">Select Crash Severity</option>
                <option value="1">1- No Injury</option>
                <option value="2">2- Possible Injury</option>
                <option value="3">3- Suspected Minor Injury</option>
                <option value="4">4- Suspected Serious Injury</option>
                <option value="5">5- Fatal</option>
            </select>
        </div>
        <div class="col-4"></div>
    </div>


    <br /><br />

    <div class="row">
        <div class="col-sm-4 text-center">
            <br />
            <div>
                <label asp-for="WORK_ZONE_RELATED"><b>Work Zone Related:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.WORK_ZONE_RELATED, true)
                False
                @Html.RadioButtonFor(model => model.WORK_ZONE_RELATED, false)
            </div>
            <br />
            <div>
                <label asp-for="PEDESTRIAN_INVOLVED"><b>Pedestrian Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.PEDESTRIAN_INVOLVED, true)
                False
                @Html.RadioButtonFor(model => model.PEDESTRIAN_INVOLVED, false)
            </div>
            <br />
            <div>
                <label asp-for="BICYCLIST_INVOLVED"><b>Bicyclist Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.BICYCLIST_INVOLVED, true)
                False
                @Html.RadioButtonFor(model => model.BICYCLIST_INVOLVED, false)
            </div>
            <br />
            <div>
                <label asp-for="MOTORCYCLE_INVOLVED"><b>Motorcycle Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.MOTORCYCLE_INVOLVED, true)
                False
                @Html.RadioButtonFor(model => model.MOTORCYCLE_INVOLVED, false)
            </div>
            <br />
            <div>
                <label asp-for="IMPROPER_RESTRAINT"><b>Improper Restraint:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.IMPROPER_RESTRAINT, true)
                False
                @Html.RadioButtonFor(model => model.IMPROPER_RESTRAINT, false)
            </div>
            <br />
            <div>
                <label asp-for="UNRESTRAINED"><b>Unrestrained:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.UNRESTRAINED, true)
                False
                @Html.RadioButtonFor(model => model.UNRESTRAINED, false)
            </div>
        </div>

        <div class="col-sm-4 text-center">
            <div>
                <label asp-for="DUI"><b>DUI:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.DUI, true)
                False
                @Html.RadioButtonFor(model => model.DUI, false)
            </div>
            <br />
            <div>
                <label asp-for="INTERSECTION_RELATED"><b>Intersection Related:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.INTERSECTION_RELATED, true)
                False
                @Html.RadioButtonFor(model => model.INTERSECTION_RELATED, false)
            </div>
            <br />
            <div>
                <label asp-for="WILD_ANIMAL_RELATED"><b>Wild Animal Related:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.WILD_ANIMAL_RELATED, true)
                False
                @Html.RadioButtonFor(model => model.WILD_ANIMAL_RELATED, false)
            </div>
            <br />
            <div>
                <label asp-for="DOMESTIC_ANIMAL_RELATED"><b>Domestic Animal Related:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.DOMESTIC_ANIMAL_RELATED, true)
                False
                @Html.RadioButtonFor(model => model.DOMESTIC_ANIMAL_RELATED, false)
            </div>
            <br />
            <div>
                <label asp-for="OVERTURN_ROLLOVER"><b>Overturn Rollover:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.OVERTURN_ROLLOVER, true)
                False
                @Html.RadioButtonFor(model => model.OVERTURN_ROLLOVER, false)
            </div>
            <br />
            <div>
                <label asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED"><b>Commerical Motor Vehical Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.COMMERCIAL_MOTOR_VEH_INVOLVED, true)
                False
                @Html.RadioButtonFor(model => model.COMMERCIAL_MOTOR_VEH_INVOLVED, false)
            </div>
            <br />
            <div>
                <label asp-for="TEENAGE_DRIVER_INVOLVED"><b>Teenage Driver Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.TEENAGE_DRIVER_INVOLVED, true)
                False
                @Html.RadioButtonFor(model => model.TEENAGE_DRIVER_INVOLVED, false)
            </div>
        </div>

        <div class="col-sm-4 text-center">
            <br />
            <div>
                <label asp-for="OLDER_DRIVER_INVOLVED"><b>Older Driver Involved:</b></label><br />
                True
                @Html.RadioButtonFor(model => model.OLDER_DRIVER_INVOLVED, true)
