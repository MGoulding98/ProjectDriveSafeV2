@{
    ViewData["Title"] = "Score";
}

@model ProjectDriveSafeV2.Models.Prediction

<div class="d-flex justify-content-center">
    <div class="jumbotron">
        <h1>Score:</h1>
        <p style="font-size:70px" class="text-center">@Math.Round(Model.PredictedValue)</p>
    </div>
</div>
<div class="d-flex justify-content-center">
    <h3>(On a scale from 1-5, 5 being the MOST safe driver & 1 being the LEAST safe driver.)</h3>
</div>
